@page
@using TWAB.Models
@model LokalizacjaModel
@{
    ViewData["Title"] = "Lokalizacja firmy";
    ViewData["ActivePage"] = ManageNavPages.Lokalizacja;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Województwo" class="form-control" aria-required="true">
                    
                    @foreach(var wojewodztwo in Listy.Wojewodztwa)
                    {
                        <option>@wojewodztwo</option>
                    }
                </select>
                <label asp-for="Input.Województwo" class="form-label"></label>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Miasto" class="form-control" aria-required="true" />
                <label asp-for="Input.Miasto" class="form-label"></label>
                <span asp-validation-for="Input.Miasto" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Ulica" class="form-control" aria-required="true" />
                <label asp-for="Input.Ulica" class="form-label"></label>
                <span asp-validation-for="Input.Ulica" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NrLokalu" class="form-control" aria-required="true" />
                <label asp-for="Input.NrLokalu" class="form-label"></label>
                <span asp-validation-for="Input.NrLokalu" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.KodPocztowy" class="form-control" aria-required="true" />
                <label asp-for="Input.KodPocztowy" class="form-label"></label>
                <span asp-validation-for="Input.KodPocztowy" class="text-danger"></span>
            </div>


            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
